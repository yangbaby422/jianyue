
.article-box{
	height: auto;
	width: 100%;
}
.article{
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	    -ms-flex-direction: column;
	        flex-direction: column;
}
.article-title{
	font-weight:bold;
}
.thumbnail-box{
	margin-top: 10px;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	height: 120px;
	width: 100%;
	/* border-bottom: 1px solid #E6E7E9; */
}
.thumbnail-item{
	-webkit-box-flex: 1;
	-webkit-flex: 1 1 33%;
	    -ms-flex: 1 1 33%;
	        flex: 1 1 33%;
	height: 110px;
	margin-right: 5px;
	margin-left: 5px;
}
.thumbnail-item image{
	width: 100%;
	height: 100%;
}
.avatar{
	width: 50px;
	height: 50px;
}
.info-text{
	margin-left: 10px;
}
.text-img-box{
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
}
.left{
	-webkit-box-flex: 1;
	-webkit-flex: 1 1 70%;
	    -ms-flex: 1 1 70%;
	        flex: 1 1 70%;
}
.right{
	-webkit-box-flex: 1;
	-webkit-flex: 1 1 30%;
	    -ms-flex: 1 1 30%;
	        flex: 1 1 30%;
}
.right image{
	width: 100%;
	height: 100%;
}

